<div class="container">
  <h1 class="centered my-3 p-2">My Services bookings</h1>
  <div class="row">
    <% @bookings.each do |booking| %>
      <div class="col-sm-6">
        <div class="card my-3 pt-2 pb-1 dimensions-booking">
          <div class="card-body">
            <h5 class="card-title"><%= booking.offer.name %></h5>
            <p class="card-text"><%= booking.date %></p>
            <p class="card-text"><%= booking.offer.detail %></p>
            <p class="card-text"><%= booking.offer.price %></p>
            <p class="card-text price"><%= booking.status %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
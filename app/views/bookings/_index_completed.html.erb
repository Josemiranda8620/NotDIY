<div class="container">
  <% if current_user.bookings_as_owner.count > 0 %>
    <h1 class="centered my-3 p-2">Passed bookings</h1>
    <div class="row">
      <% @bookings.each do |booking| %>
        <% if booking.date >= Date.today && booking.status == 'confirmed' %>
          <div class="col-sm-6">
            <div class="card my-3 pt-2 pb-1 no-effect-card" style= "background-image: url(<%= asset_path("dynamic-style.png")%>);">
              <div class="card-body">
                <h4 class="card-title"><%= booking.offer.name.capitalize %></h4>
                <p class="card-text">Booked for: <%= booking.date %></p>
                <div class="d-flex justify-content-between">
                  <p class="card-text"><%= booking.offer.price %> Â¥</p>
                  <%= simple_form_for booking do |f| %>
                    <%= f.input :status, as: :hidden, input_html: { value: 'completed'} %>
                    <%= f.submit 'Completed', class: 'btn btn-info' %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <h2 class="centered my-3 p-2 mb-4">You have no passed booking</h2>
  <% end %>
</div>

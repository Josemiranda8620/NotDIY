<div class="container justify-content-center">
  <div class="row justify-content-center">
    <div class="col col-6 create-offer-img">
      <img style="height: 600px;"src="https://images.unsplash.com/photo-1507238691740-187a5b1d37b8?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=786&q=80" alt="">
    </div>
    <div class="col col-6 my-5">
      <h3 style="text-align: center;">Create a new offer!</h3>
      <%= simple_form_for @offer do |f|%>
        <%= f.input :name %>
        <%= f.input :detail, as: :text %>
        <%= f.input :price %>
        <%= f.submit "CREATE", class:"btn btn-warning px-5", style: "border-radius: 20px; margin-left: 35%;" %>
      <% end %>
    </div>
  </div>
</div>
